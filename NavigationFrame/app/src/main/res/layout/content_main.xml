<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.homeandlearn.ken.navigationframe.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <android.support.constraint.ConstraintLayout
        android:layout_width="270dp"
        android:layout_height="317dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="288dp"
            android:layout_height="108dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="TODO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.058"
            app:srcCompat="@drawable/hb" />


        <Button
            android:id="@+id/rec_button"
            android:layout_width="294dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/b1"
            android:layout_alignStart="@+id/b1"
            android:layout_below="@+id/b1"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:padding="14dp"
            android:text="Recieve"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.537">

        </Button>


        <Button
            android:id="@+id/b3"
            android:layout_width="294dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/b1"
            android:layout_alignStart="@+id/b1"
            android:layout_below="@+id/rec_button"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:padding="14dp"
            android:text="Request Blood"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.725" />

        <Button
            android:id="@+id/b1"
            android:layout_width="294dp"
            android:layout_height="54dp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:padding="14dp"
            android:text="Donate"
            android:textColor="#FFF"
            app:layout_constraintBottom_toTopOf="@+id/rec_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.415">

        </Button>

        <Button
            android:id="@+id/btn_address"
            android:layout_width="294dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/b3"
            android:layout_alignStart="@+id/b3"
            android:layout_below="@+id/b3"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:text="Blood Bank Addresses"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.907">

        </Button>


    </android.support.constraint.ConstraintLayout>

    <android.support.design.internal.NavigationMenuView
        android:layout_width="55dp"
        android:layout_height="66dp"
        android:layout_gravity="start"
        app:menu="@menu/activity_main_drawer"
        >
    </android.support.design.internal.NavigationMenuView>
</android.support.v4.widget.DrawerLayout>







